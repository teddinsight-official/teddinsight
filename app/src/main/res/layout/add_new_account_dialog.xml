<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="@string/select_account_type"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/instagram_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintEnd_toStartOf="@id/twitter_button"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:srcCompat="@drawable/ic_instagram" />

    <ImageButton
        android:id="@+id/twitter_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_action_twitter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/instagram_button"
        app:layout_constraintTop_toTopOf="@id/instagram_button" />



</androidx.constraintlayout.widget.ConstraintLayout>